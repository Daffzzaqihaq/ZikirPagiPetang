<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/latarbelakang">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_group" />

    <Button
        android:onClick="btnKlikMasuk"
        android:id="@+id/btnMasuk"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="MASUK"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_mainbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="btnKlikSupport"
        android:id="@+id/btnSupportUs"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="SUPPORT US"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_mainbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="italic"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Follow My Instagram : @daffzaqihaq_17"/>



</LinearLayout>